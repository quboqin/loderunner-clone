{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "vite",
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        },
        {
          "key": "Cross-Origin-Resource-Policy",
          "value": "cross-origin"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/assets/anims/(.*)",
      "destination": "/anims/$1"
    },
    {
      "source": "/assets/audio/(.*)",
      "destination": "/audio/$1"
    },
    {
      "source": "/assets/images/(.*)",
      "destination": "/images/$1"
    },
    {
      "source": "/assets/levels/(.*)",
      "destination": "/levels/$1"
    },
    {
      "source": "/assets/sprites/(.*)",
      "destination": "/sprites/$1"
    },
    {
      "source": "/assets/(.*)",
      "destination": "/assets/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}